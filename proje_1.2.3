// Ethernet server
EthernetServer server(port);

// For store command from client
String cmd;

void setup()
{


  Serial.begin(9600);

  DDRB |= B00000011;
  PORTB &= ~B00000011;
  DDRD |= B1111100;
  PORTD &= ~B11111100;


  // Ethernet server initialization
  Ethernet.begin(mac);
  delay(100);
  server.begin();
  delay(100);

  // Print Arduino server IP address to serial monitor
  Serial.print("Server IP Address: ");
  Serial.println(Ethernet.localIP());

}

void loop()
{


  EthernetClient client = server.available();

  if (client.available())
  {

    // Read char until new line
    char c = client.read();

    if (c != '\n')
    {
      // Add received char to string variable
      cmd += c;
    }
    else
    {
      // Print received command to serial monitor
      Serial.println("Command: " + cmd);

      // Process the received command
      processCommand(cmd);

      // Clear variable for receive next command
      cmd = "";
    }
  }

}

void processCommand(String cmd)
{
  if (cmd == "Q")
  {
    PORTB ^= 0x02; //pin9
    delay(100);
    Serial.println("Q state changed");
  }
  else if (cmd == "W")
  {
    PORTB ^= 0x01;  //pin8
    delay(100);
    Serial.println("W state changed");
  }
  else if (cmd == "E")
  {
    PORTD ^= 0x80;  //pin7
    delay(100);
    Serial.println("E state changed");
  }
  else if (cmd == "R")
  {
    PORTD ^= 0x40; //pin6
    delay(100);
    Serial.println("R state changed");
  }
  else if (cmd == "T")
  {
    PORTD ^= 0x20; //pin5
    delay(100);
    Serial.println("T state changed");
  }
  else if (cmd == "Y")
  {
    PORTD ^= 0x10; //pin4
    delay(100);
    Serial.println("Y state changed");
  }
  else if (cmd == "U")
  {
    PORTD ^= 0x08; //pin3
    delay(100);
    Serial.println("U state changed");
  }
  else if (cmd == "I")
  {
    PORTD ^= 0x04; //pin2
    delay(100);
    Serial.println("I state changed");
  }

}
